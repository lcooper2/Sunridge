@if (Model.pgVMList != null)
{
    <div class="container">
        <div class="row">
            @foreach (var photos in Model.pgVMList)
            {
                <div class="col-md-4">
                    <div class="thumbnail">
                        <a href="\@Html.DisplayFor(modelItem => photos.userPhotos.Image)" target="_blank">
                            <img src="\@Html.DisplayFor(modelItem => photos.userPhotos.Image)"  style="min-height:300px; width:100%">
                            <div class="caption">
                                <h3>@Html.DisplayFor(modelItem => photos.userPhotos.Title)</h3>
                                <p>By @Html.DisplayFor(modelItem => photos.userName)</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

}