@page
@model Sunridge.Pages.Home.LostFoundModel
@{
    ViewData["Title"] = "LostFound";
}
@if (Model.itemList.Count() > 0)
{

    <section class="testimonials text-center">



        @foreach (var item in Model.itemList)
        {


            <div class="container mb-5">

                <hr>

                <div class="container container-fluid bg-light p-5">

                    <div class="row">

                        <div class="col-sm-6">

                            <div id="box" class="container">

                                <!--Carousel Wrapper-->

                                <div id="carousel-thumb_@item.Id" class="carousel slide carousel-fade carousel-thumbnails" data-ride="carousel" data-interval="0">

                                    <!--Slides-->

                                    <div class="carousel-inner" role="listbox" style="  border: 2px solid black;  box-shadow: 4px 4px #888888;">

                                        @foreach (var image in item.Images)

                                        {

                                            if (image.IsMainImage)

                                            {

                                                <div class="carousel-item active">

                                                    <img id="itemImage" class="d-block w-100" src="\@image.ImageURL">

                                                </div>

                                            }

                                            else

                                            {

                                                <div class="carousel-item">

                                                    <img id="itemImage" class="d-block w-100" src="\@image.ImageURL">

                                                </div>

                                            }



                                        }

                                    </div>

                                    <!--/.Slides-->
                                    <!--Controls-->

                                    <a class="carousel-control-prev" href="#carousel-thumb_@item.Id" role="button" data-slide="prev">

                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>

                                        <span class="sr-only">Previous</span>

                                    </a>

                                    <a class="carousel-control-next" href="#carousel-thumb_@item.Id" role="button" data-slide="next">

                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>

                                        <span class="sr-only">Next</span>

                                    </a>

                                    <!--/.Controls-->

                                    <ol id="thumbnailBar" class="carousel-indicators list-inline visible-sm-block hidden-xs-block visible-md-block visible-lg-block">

                                        @for (var imgIndex = 0; imgIndex < item.Images.Count; imgIndex++)

                                        {

                                            var image = item.Images[imgIndex];

                                            if (image.IsMainImage)

                                            {

                                                <li data-target="#carousel-thumb_@item.Id" data-slide-to="@imgIndex" class="active list-inline-item">

                                                    <img id="thumbnail" class="img-fluid" src="\@image.ImageURL" style=" border: 1px solid black;">

                                                </li>

                                            }

                                            else

                                            {

                                                <li data-target="#carousel-thumb_@item.Id" data-slide-to="@imgIndex" class="list-inline-item">

                                                    <img id="thumbnail" class="img-fluid" src="\@image.ImageURL" style=" border: 1px solid black;">

                                                </li>

                                            }



                                        }

                                    </ol>

                                </div>

                                <!--/.Carousel Wrapper-->

                            </div>

                        </div>

                        <div class="col-sm-6 " style="background-color:lightblue; border: 1px solid black; box-shadow: 3px 4px #888888;">

                            <h1 class="text-left">Item Name : @item.ItemName</h1>

                            <p class="text-left"><b>Item Description And Contact Information :</b><br /> @item.Discription</p>


                        </div>

                    </div>

                </div>

            </div>

        }

    </section>

} else
{
    <h2>Lost and Found</h2>
    <p>If you lost of found something on the mountain, please notify the sunridge webmaster by e-mailing <a href="mailto:webmaster@sundrige.info">webmaster@sundrige.info</a>.
        We'll get it posted here as soon as possible.</p>
}

