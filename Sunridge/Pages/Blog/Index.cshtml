                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>*@
    //< br />
    #endregion
    #region New Card
    <div class="card promoting-card shadow" id="card(@thread.Id)">
        <div class="card-body d-flex flex-row no-gutters row-no-gutter">
            <div class="col-2">
                <img src="~/Images/BlogImages/ProfilePictures/LoganCircle.png" class="rounded-circle mr-3" height="50px" width="50px" alt="avatar">
            </div>
            <div class="col-8">
                <div class="">
                    <h4 class="card-title font-weight-bold mb-2">@thread.ApplicationUser.FullName</h4>
                    <p class="card-text"><i class="far fa-clock pr-2"></i>@thread.WhenPosted.Date.ToShortDateString() at @thread.WhenPosted.ToString(@"h\:mm\ tt")</p>
                </div>
            </div>
            <div class="col-2">
                @if (User.IsInRole(SD.AdminRole) || thread.ApplicationUserId == Model.GetCurrentUserId())
                {
                    <button onclick="Delete(@thread.Id)" class="btn bg-white float-right"><i class="fas fa-window-close fa-pull-right text-danger  fa-2x"></i></button>
                }
            </div>
        </div>
        <div class="card-body">
            <div class="card-text">
                <p class="card-text">@thread.BlogComments[0].BlogCommentText</p>

                <div class="view overlay">
                    @if (thread.BlogComments[0].Images.Count > 0)
                    {
                        <div id="demo" class="carousel slide" data-ride="carousel">
                            <ul class="carousel-indicators">
                                @for (int i = 0; i < thread.BlogComments[0].Images.Count; i++)
                                {
                                    if (i == 0)
                                    {
                                        <li data-target="#demo" data-slide-to="0" class="active"></li>
                                    }
                                    else
                                    {
                                        <li data-target="#demo" data-slide-to="@i"></li>
                                    }
                                }
                            </ul>
                            <div class="carousel-inner">
                                @for (int i = 0; i < thread.BlogComments[0].Images.Count; i++)
                                {
                                    if (i == 0)
                                    {
                                        <div class="carousel-item active">
                                            <div class="view overlay">
                                                <img class="card-img-top rounded-0" src="@thread.BlogComments[0].Images[i].ImgPath" width="360" height="640">
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="carousel-item">
                                            <img src="@thread.BlogComments[0].Images[i].ImgPath" width="360" height="640">
                                        </div>
                                    }
                                }
                            </div>
                            @if (@thread.BlogComments[0].Images.Count > 1)
                            {
                                <a class="carousel-control-prev" href="#demo" data-slide="prev">
                                    <span class="carousel-control-prev-icon"></span>
                                </a>
                                <a class="carousel-control-next" href="#demo" data-slide="next">
                                    <span class="carousel-control-next-icon"></span>
                                </a>
                            }
                        </div>
                    }
                </div>

                <div class="row border-top border-bottom py-1 mx-1 mt-2">
                    <div class="col-6 text-center">
                        @{
                            var count = (thread.BlogComments.Count - 1).ToString();
                            if(count == "0") { count = ""; }
                          }
                        <button class="btn"><i class="far fa-comment-alt text-muted text-center p-1 my-1" onclick="toggleCommentBox(@thread.Id)"> Comment</i></button>
                    </div>
                    <div class="col-6 text-center">
                        @if (Model.UserHasLikedPost(thread.BlogComments[0].Id) == true)
                        {
                            <button class="btn"><i id="likeIcon(@thread.BlogComments[0].Id)" class="far fa-heart text-muted text-center p-1 my-1 mr-3" onclick="LikeThread(@thread.BlogComments[0].Id)"> Like</i></button>
                        }
                        else
                        {
                            <button class="btn"><i id="likeIcon(@thread.BlogComments[0].Id)" class="fas fa-heart text-danger text-center p-1 my-1 mr-3" onclick="LikeThread(@thread.BlogComments[0].Id)"> Like</i></button>
                        }
                    </div>
                </div>
            </div>
        </div>
        @if (thread.BlogComments.Count > 1)
        {
            <div class="row">
                <div class="col-6" style="margin-left: 10px">
                    <button id="showCommentsButton(@thread.Id)" class="btn bg-white text-muted pull-left float-left mb-1" onclick="showComments(@thread.Id)"><span>View Comments </span><i id="showCommentsIcon(@thread.Id)" class="fas fa-arrow-down text-muted"></i></button>
                </div>
            </div>
        }
    </div>
    <div id="comments(@thread.Id)" class="comments bg-white pl-3" style="margin-left:-15px; margin-right:-15px;">

        @if (thread.BlogComments != null && thread.BlogComments.Count > 1)
        {
            @foreach (var comment in thread.BlogComments)
            {
                @if (comment.Equals(thread.BlogComments[0])) { continue; }
                <div class="row ml-1">
                    <img src="https://mdbootstrap.com/img/Photos/Avatars/avatar-8.jpg" class="rounded-circle mr-3" height="25px" width="25px" alt="avatar">
                    <div>
                        <span class="card-title font-weight-bold mb-2"><strong>@comment.ApplicationUser.FullName</strong></span>

                        <p class="card-text"><i class="far fa-clock pr-2"></i>@comment.WhenPosted.ToShortTimeString()</p>
                        <p>@comment.BlogCommentText</p>
                    </div>
                </div>
                @if (comment.Images.Count > 0)
                {
                    <div class="row ml-1 mr-1">
                        @foreach (var img in comment.Images)
                        {
                            <img class="commentPhoto border img-fluid" src="@img.ImgPath" style="display: inline;" /><span>&nbsp;</span>
                        }
                    </div>

                }
                <div class="ml-4">
                    @if (Model.UserHasLikedPost(thread.BlogComments[0].Id) == true)
                    {
                        <button class="btn bg-white"><i class="far fa-thumbs-up text-muted" id="likeIcon(@comment.Id)" onclick="LikeThread(@comment.Id)"> Like </i></button>
                    }
                    else
                    {
                        <button class="btn bg-white"><i class="fas fa-thumbs-up text-muted" id="likeIcon(@comment.Id)" onclick="LikeThread(@comment.Id)"> Like </i></button>
                    }
                    <button class="btn bg-white" onclick="toggleReplyBox(@comment.Id)"><i class="far fa-comment text-muted"> Reply</i></button>
                </div>

                <div class="row offset-3 mx-1" id="reply(@comment.Id)" style="display: none;">
                    <div class="col-sm-12"><i class="fas fa-pencil-alt"> Reply</i></div>
                    <form method="post">
                        <div class="col-12"><textarea id="reply(@comment.Id)" name="reply(@comment.Id)" style="width:100%; height:100px"></textarea></div>
                        <div class="col-12"><button type="submit" asp-page-handler="Reply" asp-route-id="@comment.Id" class="btn btn-info">Post</button> <button class="btn btn-danger">Cancel</button></div>
                    </form>
                </div>
                @foreach (var reply in comment.Replies)
                {
                    <div class="row p-1 mb-1 offset-1">
                        <div class="col-12">
                            <div class="col-2">
                                <img src="~/Images/BlogImages/ProfilePictures/LoganCircle.png" class="rounded-circle mr-3" height="25px" width="25px" alt="avatar">
                            </div>
                            <div class="col-9">
                                <div>
                                    <span class="mb-2 font-weight-bold">Reply App User Name</span>
                                    <p class="card-text"><i class="far fa-clock pr-2"></i>@reply.WhenPosted.Date.ToShortDateString() at @reply.WhenPosted.ToString(@"h\:mm\ tt")</p>
                                </div>
                            </div>
                        </div>
                        <br />
                    </div>
                    <div class="row p-1 mb-1 offset-1">
                        <div class="col-12">
                            <div class="col-9">
                                <p>@reply.ReplyText</p>
                            </div>
                        </div>
                    </div>
                }
            }
        }
    </div>
    <div class="row bg-white pt-3">
        <div class="col-12">
            <div id="box(@thread.Id)" class="commentBox">
                <h5>Comment On This Post</h5>
                <form method='POST' enctype="multipart/form-data">
                    <div class='row'>
                        <textarea id="textarea(@thread.Id)" name="textarea(@thread.Id)" class='form-control z-depth-1' style='width: 100%' placeholder='Your comment here'></textarea>
                    </div>
                    <br />
                    <div class="row">
                        <input name="commentImages(@thread.Id)" id="commentImages(@thread.Id)" type="file" multiple="multiple" class="offset-1" />
                    </div>
                    <br />
                    <div class='row mb-3'>
                        <div class='col-4'>
                            <button type='submit' class='btn btn-sm btn-info form-control' asp-page-handler='Comment' asp-route-threadId='@thread.Id'><i class='fas fa-sticky-note'></i> Post</button>
                        </div>
                        <div class='col-4'>
                            <button type="button" class='btn btn-sm btn-danger form-control' onclick='toggleCommentBox(@thread.Id)'><i class='far fa-trash-alt'></i> Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <br />
    #endregion
}
@section Scripts {
    <script src="~/js/blog.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
}
