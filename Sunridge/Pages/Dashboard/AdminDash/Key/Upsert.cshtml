@page
@model Sunridge.Pages.Dashboard.AdminDash.Key.UpsertModel

<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.KeyObj.Id != 0)
            {
                <input type="hidden" asp-for="KeyObj.Id" />
            }
            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">@(Model.KeyObj.Id != 0 ? "Update" : "Create") Serial</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="KeyObj.SerialNumber"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="KeyObj.SerialNumber" />
                        <span class="text-danger" asp-validation-for="KeyObj.SerialNumber"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="KeyObj.Year"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="KeyObj.Year" />
                        <span class="text-danger" asp-validation-for="KeyObj.Year"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">@(Model.KeyObj.Id != 0 ? "Update" : "Create")</button>
                            </div>
                            <div class="col-6">
                                <a asp-page="/Dashboard/AdminDash/Key/Key" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>

