                <div class="form-group row pl-3 pr-3">
                    <button id="update-profile-button" type="submit" class="btn btn-primary col-6">Save Changes</button>
                    <a class="btn btn-danger col-6 form-control " asp-page="./Upsert">Stop Edit</a>
