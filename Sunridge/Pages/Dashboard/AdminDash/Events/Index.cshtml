@page
@model Sunridge.Pages.Dashboard.AdminDash.Events.IndexModel

<h1>Calendar Events</h1>
<div class="border backgroundWhite container">
    <div class="row">
        <div class="col-12 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp; Create New Event</a>
        </div>
    </div>
    <br /> <br />
    <table id="DT_Load" class="table table-striped table-bordered" style="width:100%;">
        <thead>
            <tr>
                <th>Subject</th>
                <th>Description</th>
                <th>Location</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Full Day</th>
                <th></th>
            </tr>
        </thead>
    </table>


</div>
@section Scripts{
    <script src="~/js/events.js"></script>
    <script src="https://momentjs.com/downloads/moment.min.js"></script>
}