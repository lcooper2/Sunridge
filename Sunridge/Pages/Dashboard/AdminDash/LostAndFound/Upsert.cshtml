@page
@model Sunridge.Pages.Dashboard.AdminDash.LostAndFound.UpsertModel
@using Sunridge.Utility
@{
    ViewData["Title"] = "Lost And Found";
    Layout = "_DashboardLayout";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">

    <div class="container">
        <div class="row px-2 mx-2 bg-white border ">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.LAFObj.Id != 0)
            {
                <input type="hidden" asp-for="LAFObj.Id" />
            }

            <div class="col-10 px-3" style="border-bottom: 2px solid; border-color: black">
                <h2 class="text-primary">@(Model.LAFObj.Id != 0 ? "Update" : "Create") Board Member </h2>
            </div>

            <div class="col-9 pt-3">

                <div class="form-group rox">

                    <div class="col-3">
                        <label asp-for="LAFObj.ItemName"></label>
                    </div>

                    <div class="col-7">
                        <input class="form-control" asp-for="LAFObj.ItemName" />
                        <span class="text-danger" asp-validation-for="LAFObj.ItemName"></span>
                    </div>

                </div>

                <div class="form-group row ">

                    <div class="col-3">
                        <label asp-for="LAFObj.Discription"></label>
                    </div>

                    <div class="col-7">
                        <textarea class="form-control" asp-for="LAFObj.Discription" id="txtDesc" style="height:200px;"></textarea>

                    </div>
                </div>

                <div class="form-group row border">
                    <div class="col-3">
                        <label asp-for="LAFObj.Claimed"></label>
                    </div>
                    <div class="col-7">
                        True <input type="radio" class="form-control" asp-for="LAFObj.Claimed" value="True" onclick="unhide()">
                        False <input type="radio" class="form-control" asp-for="LAFObj.Claimed" value="False" onclick="hide()" />
                        <span class="text-danger" asp-validation-for="LAFObj.Claimed"></span>
                    </div>

                </div>
               
                    <div class="form-group row" id="Claimed" style="display:none">
                        <div class="col-3">
                            <label asp-for="LAFObj.ClaimedBy"></label>
                        </div>

                        <div class="col-7">
                            <input class="form-control" asp-for="LAFObj.ClaimedBy" />

                        </div>
                    </div>
                
                <div class="form-group row">

                    <div class="col-9 offset-3">

                        <div class="row">

                            <div class="col-6">
                                @if (Model.LAFObj.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control" onclick="return ValidateInput()">Create</button>
                                }

                            </div>

                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">BackToList</a>
                            </div>
                        </div>

                    </div>


                </div>





                @*@if (Model.BoardObj != null)
                    {
                        <div class="clo-4 p-4">
                            <img src="\@Model.BoardObj.Image" width="100%" style="border-radius: 5px; border: 1px solid #bbb9b9;" />

                        </div>
                    }*@
            </div>
        </div>

    </div>


</form>


    <script>
        function hide() {
            var x = document.getElementById("Claimed");
            if (x.style.display === "block") {
                x.style.display = "none";
            } 
        }
            function unhide() {
            var x = document.getElementById("Claimed");
            if (x.style.display === "none") {
                x.style.display = "block";
            } 
        }
    </script>
