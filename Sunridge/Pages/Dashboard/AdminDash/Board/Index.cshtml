@page
@model Sunridge.Pages.Dashboard.AdminDash.Board.IndexModel
@{
    ViewData["Title"] = "Board Members";
    Layout = "_DashboardLayout";
}

<div class="border backgroundwhite container">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Board Member's</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-page="Upsert" class="btn btn-primary"><i class="fas fa-plus"></i>&nbsp;Create New</a>
        </div>
    </div>
    <br />
    <br />
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Title</th>
                <th>Name</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/board.js"></script>
}