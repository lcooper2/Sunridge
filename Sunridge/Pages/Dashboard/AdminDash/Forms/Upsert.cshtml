@page
@model Sunridge.Pages.Dashboard.AdminDash.Forms.UpsertModel
@{
    ViewData["Title"] = "Upsert";
    Layout = "_DashboardLayout";
}

    <form method="post" asp-action="Upsert">
        <div class="container">
            <div class="row px-2 mx-2 backgroundWhite border">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @if (Model.FormResObj.FormResponse.Id != 0)
                {
                    <input type="hidden" asp-for="FormResObj.FormResponse.Id" />
                }
                @if (Model.FormResObj.FormResponse.FormSubmissionsId != 0)
                {
                    <input type="hidden" asp-for="FormResObj.FormResponse.FormSubmissionsId" />
                }
                <input type="hidden" asp-for="FormResObj.FormResponse.FormSubmissions" value="@Model.FormResObj.FormSubmissions" />
                <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                    <h2 class="text-primary">@(Model.FormResObj.FormResponse.Id != 0 ? "Update" : "Create") Serial</h2>
                </div>
                <div class="col-8 pt-3">
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="FormResObj.FormResponse.FormType"></label>
                        </div>
                        <div class="col-9">
                            <p>
                                @Html.DisplayFor(c => Model.FormResObj.FormResponse.FormType)
                            </p>
                            <input type="hidden" asp-for="FormResObj.FormResponse.FormType" value="@Model.FormResObj.FormResponse.FormType" />


                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="FormResObj.FormResponse.Resolved"></label>
                        </div>
                        <div class="col-9">
                            <input class="form-control" asp-for="FormResObj.FormResponse.Resolved" type="checkbox" data-toggle="toggle" data-on="True" data-off="False" data-offstyle="danger"/>
                            <span class="text-danger" asp-validation-for="FormResObj.FormResponse.Resolved"></span>

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="FormResObj.FormResponse.ResolveDate"></label>
                        </div>
                        <div class="col-9">
                            <input class="form-control" asp-for="FormResObj.FormResponse.ResolveDate" />
                            <span class="text-danger" asp-validation-for="FormResObj.FormResponse.ResolveDate"></span>

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="FormResObj.FormResponse.ResolveUser"></label>
                        </div>
                        <div class="col-9">
                            <input class="form-control" asp-for="FormResObj.FormResponse.ResolveUser" />
                            <span class="text-danger" asp-validation-for="FormResObj.FormResponse.ResolveUser"></span>

                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-3">
                            <label asp-for="FormResObj.FormResponse.FormDisplay"></label>
                        </div>
                        <div class="col-9">
                            <p>
                                @Html.DisplayFor(c => Model.FormResObj.FormResponse.FormDisplay)
                                <input type="hidden" asp-for="FormResObj.FormResponse.FormDisplay" value="@Model.FormResObj.FormResponse.FormDisplay" />


                            </p>


                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-9 offset-3">
                            <div class="row">
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary form-control">@(Model.FormResObj.FormResponse.Id != 0 ? "Update" : "Create")</button>
                                </div>
                                <div class="col-6">
                                    <a asp-page="/Dashboard/AdminDash/Forms/FormRespnsepage" class="btn btn-success form-control">Back to List</a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </form>
