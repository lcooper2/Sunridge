@page
@model Sunridge.Pages.Dashboard.AdminDash.CommonArea.UpsertModel
@{
    ViewData["Title"] = "Upsert";
}

<h1>Common Area Assets</h1>
<!--Common Area Upsert-->
<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="container">
        <div class="row px-2 mx-2 backgroundWhite border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.ComAAObj.Id != 0)
            {
                <input type="hidden" asp-for="ComAAObj.Id" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #325d88">
                <h2 class="text-primary">@(Model.ComAAObj.Id != 0 ? "Update" : "Create") Common Area Asset</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ComAAObj.AssetName"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="ComAAObj.AssetName" />
                        <span class="text-danger" asp-validation-for="ComAAObj.AssetName"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ComAAObj.PurchasePrice"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="ComAAObj.PurchasePrice" />
                        <span class="text-danger" asp-validation-for="ComAAObj.PurchasePrice"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ComAAObj.Description"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="ComAAObj.Description" />
                        <span class="text-danger" asp-validation-for="ComAAObj.Description"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ComAAObj.Status"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="ComAAObj.Status" />
                        <span class="text-danger" asp-validation-for="ComAAObj.Status"></span>

                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="ComAAObj.Date"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="ComAAObj.Date" />
                        <span class="text-danger" asp-validation-for="ComAAObj.Date"></span>

                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                @if (Model.ComAAObj.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control" onclick="return ValidateInput()">Create</button>
                                }
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
