@page
@model Sunridge.Pages.Dashboard.OwnerDash.Owner.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form method="post" asp-action="Profile" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ApplicationUser.Id" />
            <div id="nonEdited" style="display:block">



                <div class="form-group row border">
                    <div class="col-9">
                        <div style="display:block">
                            <label asp-for="ApplicationUser.FullName"></label><br />
                            <b>@Model.ApplicationUser.FullName</b>
                        </div>
                    </div>
                </div>

                <div class="form-group row border">
                    <div class="col-9">
                        <div class="non-edit" style="display:block">
                            <label asp-for="ApplicationUser.UserName"></label><br />
                            <b>@Model.ApplicationUser.UserName</b>
                        </div>

                    </div>
                </div>

                <div class="form-group row border">
                    <div class="col-9">
                        <div class="non-edit" style="display:block">
                            <label asp-for="ApplicationUser.Email"></label><br />
                            @if (Model.ApplicationUser.Email != null)
                            {
                                <b>@Model.ApplicationUser.Email</b>
                            }
                            else
                            {
                                <b>@Model.ApplicationUser.UserName</b>
                            }
                        </div>

                    </div>
                </div>

                <div class="form-group row border">
                    <div class="col-9">
                        <div class="non-edit" style="display:block">
                            <label asp-for="ApplicationUser.PhoneNumber"></label><br />
                            @if (Model.ApplicationUser.PhoneNumber != null)
                            {
                                <b>@String.Format("{0: (###) ###-####}", Convert.ToInt64(Model.ApplicationUser.PhoneNumber))</b>
                            }
                            else
                            {
                                <b class="text-danger">No Phone Number Listed</b>
                            }
                        </div>


                    </div>
                </div>

                <div class="form-group row border">
                    <div class="col-9">
                        <div class="non-edit" style="display:block">
                            <label asp-for="ApplicationUser.Birthday"></label><br />

                            @if (Model.ApplicationUser.PhoneNumber != null)
                            {
                                <b>@Model.ApplicationUser.Birthday</b>
                            }
                            else
                            {
                                <b class="text-danger">No Birthday Listed</b>
                            }
                        </div>

                    </div>
                </div>

                <div class="form-group row border">
                    <div class="col-9">
                        <div class="non-edit" style="display:block">

                            <label asp-for="ApplicationUser.EmergencyContactName"></label><br />
                            @if (Model.ApplicationUser.EmergencyContactName != null)
                            {
                                <b style="text-wrap:none">@Model.ApplicationUser.EmergencyContactName</b>
                            }
                            else
                            {
                                <b class="text-danger">No Emergency Contact Listed</b>
                            }

                        </div>
                    </div>

                </div>

                <div class="form-group row border">
                    <div class="col-9">
                        <div class="non-edit" style="display:block">
                            <label asp-for="ApplicationUser.EmergencyContactPhone"></label><br />
                            @if (Model.ApplicationUser.EmergencyContactPhone != null)
                            {
                                <b>@String.Format("{0: (###) ###-####}", Convert.ToInt64(Model.ApplicationUser.EmergencyContactPhone))</b>
                            }
                            else
                            {
                                <b class="text-danger">No Emergency Contact Listed</b>
                            }

                        </div>
                    </div>

                </div>

                <div class="form-group row border">
                    <div class="col-9">
                        <div class="non-edit" style="display:block">
                            <label asp-for="ApplicationUser.ReceiveEmails"></label><br />
                            @if (Model.ApplicationUser.ReceiveEmails != null)
                            {
                                <b>@Model.ApplicationUser.ReceiveEmails</b>
                            }
                            else
                            {
                                <b class="text-danger">Not Selected</b>
                            }
                        </div>
                    </div>

                </div>


                <div class="form-group row">

                    <div class="col-7 offset-3">

                        <div class="row">

                            <div class="col-6">
                                <a class="btn btn-primary form-control" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Edit Account</a>
                            </div>


                        </div>

                    </div>

                </div>
            </div>

        </form>
    </div>
</div>

