@page
@model Sunridge.Pages.Dashboard.OwnerDash.Owner.ProfileModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="ApplicationUser.FullName"></label>
                <h4 class="text-info" style="border: .2px solid black; background-color: lightgray">@Model.ApplicationUser.FullName</h4>

            </div>
            <div class="form-group">
                <label asp-for="ApplicationUser.UserName"></label>
                <h4 class="text-info" style="border: .2px solid black; background-color: lightgray">@Model.ApplicationUser.UserName</h4>
            </div>

            <div class="form-group">
                <label asp-for="ApplicationUser.PhoneNumber"></label>
                @if (Model.ApplicationUser.PhoneNumber != null)
                {
                    <h4 class="text-info" style="border: .2px solid black; background-color: lightgray">@Model.ApplicationUser.PhoneNumber</h4>
                }
                else
                {
                    <h4 class="text-danger" style="border: .2px solid black; background-color: lightgray">No Phone Number Listed</h4>
                }
                

            </div>

            <div class="form-group">
                <label asp-for="ApplicationUser.Birthday"></label>
                <h4 class="text-info" style="border: .2px solid black; background-color: lightgray">@Model.ApplicationUser.Birthday</h4>
            </div>

            <div class="form-group">
                <label asp-for="ApplicationUser.EmergencyContactName"></label>
                @if (Model.ApplicationUser.EmergencyContactName != null)
                {
                 <h4 class="text-info" style="border: .2px solid black; background-color: lightgray">@Model.ApplicationUser.EmergencyContactName</h4>
                }
                else
                {
                     <h4 class="text-danger" style="border: .2px solid black; background-color: lightgray">No Emergency Contact Listed</h4>
                }
                
            </div>

            <div class="form-group">
                <label asp-for="ApplicationUser.EmergencyContactPhone"></label>
                @if (Model.ApplicationUser.EmergencyContactPhone != null)
                {
                    <h4 class="text-info" style="border: .2px solid black; background-color: lightgray">@Model.ApplicationUser.EmergencyContactPhone</h4>
                }
                else
                {
                    <h4 class="text-danger" style="border: .2px solid black; background-color: lightgray">No Emergency Contact Listed</h4>
                }
                
            </div>

            <div class="form-group">
                <label asp-for="ApplicationUser.ReceiveEmails"></label>
                @if (Model.ApplicationUser.ReceiveEmails != null)
                {
                <h4 class="text-info" style="border: .2px solid black; background-color: lightgray">@Model.ApplicationUser.ReceiveEmails</h4>
                }else 
                {
                <h4 class="text-danger" style="border: .2px solid black; background-color: lightgray">Not Selected</h4>
                }
            </div>

            
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}