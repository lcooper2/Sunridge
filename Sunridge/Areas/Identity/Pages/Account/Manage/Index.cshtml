@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="appUser.Id" />


            <div class="form-group">
                <label asp-for="appUser.FirstName"></label>
                <input asp-for="appUser.FirstName" class="form-control" />
                <span asp-validation-for="appUser.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="appUser.LastName"></label>
                <input asp-for="appUser.LastName" class="form-control" />
                <span asp-validation-for="appUser.LastName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="appUser.UserName"></label>
                <input asp-for="appUser.UserName" class="form-control" disabled />
            </div>
            <div class="form-group">
                <label asp-for="appUser.Email"></label>
                <input asp-for="appUser.Email" class="form-control" />
                <span asp-validation-for="appUser.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="appUser.PhoneNumber"></label>
                <input asp-for="appUser.PhoneNumber" class="form-control" />
                <span asp-validation-for="appUser.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="appUser.Birthday"></label>
                <input asp-for="appUser.Birthday" class="form-control" />
                <span asp-validation-for="appUser.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="appUser.Occupation"></label>
                <input asp-for="appUser.Occupation" class="form-control" />
                <span asp-validation-for="appUser.Occupation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="appUser.EmergencyContactName"></label>
                <input asp-for="appUser.EmergencyContactName" class="form-control" />
                <span asp-validation-for="appUser.EmergencyContactName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="appUser.EmergencyContactPhone"></label>
                <input asp-for="appUser.EmergencyContactPhone" class="form-control" />
                <span asp-validation-for="appUser.EmergencyContactPhone" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <label>Receive Emails</label>
                </div>
                <div class="col-md-6">
                    <input class="form-control" asp-for="@Model.receiveEmail" type="checkbox" data-toggle="toggle" data-on="Enable" data-off="Disable" data-offstyle="danger" data-width="100" />
                    <span class="text-danger" asp-validation-for="@Model.receiveEmail"></span>

                </div>
            </div>
            <div class="form-group row pl-3 pr-3">
                <button id="update-profile-button" type="submit" class="btn btn-success col-6">Save Changes</button>
                <a class="btn btn-danger col-6 form-control " asp-page="/Dashboard/OwnerDash/Owner/profile">Stop Edit</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}